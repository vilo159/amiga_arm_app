# from GranuSoft/src/view/elements .kv .py

<MotorSlider@Slider>
    orientation: 'vertical'
    step: 1
    min: -1024
    max: 1024

<SideButton@Button>
	font_size: 40

<MotorLabel@Label>
    size_hint_max_y: 50
    font_size: 35

<MotorValue@Label>
    size_hint_max_y: 50
    font_size: 30

<MotorView>:
	orientation: 'horizontal'
	padding: 10
    GridLayout:
    	rows: 4
	    spacing: [0, 10]
	    row_default_height: self.height/4 - (30/4.)
	    row_force_default: True
	    size_hint_x: 0.37
        SideButton:
            text: 'Zero All'
	    	on_release:
                slider1.value = 0
                slider2.value = 0
                slider3.value = 0
                slider4.value = 0
    BoxLayout:
    	orientation: 'vertical'
	    padding: [10, 10, 10, 10]
	    spacing: 10
        Label:
            size_hint_max_y: 50
            font_size: 40
            text: 'Motor View'
        GridLayout:
            rows: 3
            cols: 4
            spacing: 10

            MotorLabel:
                text: 'Motor 1'
            MotorLabel:
                text: 'Motor 2'
            MotorLabel:
                text: 'Motor 3'
            MotorLabel:
                text: 'Motor 4'

            MotorSlider:
                id: slider1
            MotorSlider:
                id: slider2
            MotorSlider:
                id: slider3
            MotorSlider:
                id: slider4

            MotorValue:
                text: str(slider1.value)
            MotorValue:
                text: str(slider2.value)
            MotorValue:
                text: str(slider3.value)
            MotorValue:
                text: str(slider4.value)
