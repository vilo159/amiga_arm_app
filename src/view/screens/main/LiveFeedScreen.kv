<LiveFeedInfoBox@Label>:
    font_size: 25
    color: 1,1,1,1
	halign: 'center'
	valign: 'center'
	markup: True
    bold: True
    canvas.before:
        Color:
            rgba: .14,.14,.14,1
        Rectangle:
            pos: self.pos
            size: self.size

<LiveFeedScreen>:
	name: 'live_feed_screen'
    GranuContainer:
        GranuSideArea:
            GranuNone:
            GranuSideButton:
                id: adc_button_text
                on_release:
                    root.adc_button_press()
            GranuSideButton:
                text: root.transition_to_state
	    		on_release:
                    root.transition()
            GranuSideButton:
                text: 'Back'
	    		on_release:
                    root.manager.transition.direction = 'right'
                    root.move_to('main_screen') # Move to main screen
        GranuContent:
            GranuTitle:
                text: 'Live Feed'
            GridLayout:
                cols: 2 #3
                spacing: 10
                LiveFeedInfoBox:
                    id: current_date
                    text: root.current_date_label +':\n'+ root.current_date
                LiveFeedInfoBox:
                    id: time
                    text: root.time_label + ':\n' + root.time
                #LiveFeedInfoBox:
                #    id: location
                #    size_hint_x: 1.25
                #    text: root.location_label + ':\n' + root.location
                LiveFeedInfoBox:
                    id: x_load
                    text: root.x_load_label + ':\n' + root.x_load + root.xUnits
                #LiveFeedInfoBox:
                #    id: y_load
                #    text: root.y_load_label + ':\n' + root.y_load
                #LiveFeedInfoBox:
                #    id: load_cell_height
                #    text: root.load_cell_height_label + ':\n' + root.load_cell_height + root.loadCellHeightUnits
                LiveFeedInfoBox:
                    id: friction_load
                    text: root.friction_load_label + ':\n' + root.friction_load + root.frictionUnits
                #LiveFeedInfoBox:
                #    id: imu_angle
                #    text: root.imu_angle_label + ':\n' + root.imu_angle + root.imuUnits
                LiveFeedInfoBox:
                    id: cpu_time
                    text: root.data_rate_label + ':\n' + root.data_rate + " Hz"
                