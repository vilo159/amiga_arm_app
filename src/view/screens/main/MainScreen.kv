<MainScreenInfoBox@Label>:
    font_size: 25
	color: 1,1,1,1
	halign: 'center'
	valign: 'center'
	markup: True
	bold: True
    canvas.before:
        Color:
            rgba: .14,.14,.14,1
        Rectangle:
            pos: self.pos
            size: self.size

<MainScreen>:
    name: 'main_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Settings'
	    		on_release:
                    root.move_to('settings_screen') # Move to settings screen
            GranuSideButton:
                text: 'Testing'
                on_release:
                    root.move_to('test_settings_confirmation') # Moves to test settings confirmation
            GranuSideButton:
                text: 'Live Feed'
                on_release:
                    root.move_to('live_feed_screen') # Move to liveFeed screen
            GranuSideButton:
                text: 'Exit'
                on_release:
                    root.move_to('exit_screen') # Move to exit screen
        GranuContent:
            GranuTitle:
                text: 'Main Menu'
            Label:
                id: device_name
                font_size: 40
                markup: True
            	bold: True
                text: 'Stalk Strength\nDevice 2.3.1'
                halign: 'center'
            Label:
                id: warning_text
                color: (0.8, 0, 0, 1)
                size_hint_max_y: 15
                font_size: 15
            	markup: True
            	bold: True
            GridLayout:
                cols: 2
                spacing: 10
                MainScreenInfoBox:
                    id: current_date
                    text: 'Date: \n' + root.current_date
                MainScreenInfoBox:
                    id: load_cell_height
                    text: 'Height: \n' + root.load_cell_height+root.loadCellHeightUnits
                MainScreenInfoBox:
                    id: location
                    text: 'Location:\n' + root.location
                MainScreenInfoBox:
                    id: time
                    text: 'Time: \n' + root.time
