#:import Path pathlib.Path

<ImageDeleteConfirmation>:
    name: 'img_delete_confirmation'
    GranuContainer:
        GranuContent:
            GranuTitle:
                text: 'Remove all saved images?'
            GridLayout:
                cols: 3
                rows: 3
                spacing: 10
                row_default_height: self.height/4
                Button:
                	background_color: (.42,.42,0.42,1)
                	font_size: 25
                    text: 'Cancel'
                    size_hint_y: None
                    height: self.font_size + 40
                    size_hint_x: 0.25
                	halign: 'center'
                	valign: 'middle'
                	markup: True
                	bold: True
                    on_release: root.cancel()
                Button:
                	background_color: (.42,.42,0.42,1)
                	font_size: 25
                    id: remove_button
                    text: 'Remove All'
                    size_hint_y: None
                    height: self.font_size + 40
                    size_hint_x: 0.25
                	halign: 'center'
                	valign: 'middle'
                	markup: True
                	bold: True
                    on_release: root.remove_all()