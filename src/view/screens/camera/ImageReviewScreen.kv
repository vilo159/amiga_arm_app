<ImageReviewScreen>:
    name: 'img_review_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Delete'
                on_release:
                    root.delete_button()
                    root.move_to('img_viewer_screen')
            GranuNone:
            GranuNone:
            GranuSideButton:
                text: 'Back'
                on_release:
                    root.move_to('img_viewer_screen') # Move to images view screen
        GranuContent:
            GranuTitle:
                text: 'Image Review Screen'
            Label:
                size_hint_max_y: 40
                font_size: 20
            	markup: True
            	bold: True
                text: 'Image: ' + root.image_name
            Image:
                source: 'Images/' + root.image_name
                texture: None
