<SensorButton>:
    font_size: 30
    halign: 'center'
    background_color: (0.42, 0.42, 0.42, 1)
	markup: True
    bold: True

<SensorsScreen>:
	name: 'sensors_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Restart'
                on_release:
                    app.stop()
                    root.restart_OS()
            GranuNone:
            GranuNone:
            GranuSideButton:
                text: 'Back'
	    		on_release:
                    root.back()
        GranuContent:
            GranuTitle:
                text: 'Sensor Calibration'
            GridLayout:
                id: sensor_list
                cols: 3
                rows: 3
                spacing: 10
                row_default_height: self.height/4
            Label:
                color: (0.8, 0, 0, 1)
                size_hint_max_y: 22
                font_size: 22
                markup: True
                bold: True
                text: 'Restart Device For Calibration Changes To Take Effect'
